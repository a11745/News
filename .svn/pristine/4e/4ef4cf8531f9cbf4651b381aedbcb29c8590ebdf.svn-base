	background-color:;
}


/* 移动端 */
#toggle-checkbox:checked ~ div{
	display:block !important;
}

#toggle-label{
	display:inline-block;
	position:absolute;
	right:15px;
	top:3px;
	font-size:16px;
	font-weight:normal;
	color:#666;
}

#toggle-label:hover{
	color:#333;
}

.navbar-nav li{
	padding-top: 2px;
    padding-bottom: 2px;
}


#tes a{
    padding: 10px 10px;
}

#tea a{
	padding: 1px 10px;
}
